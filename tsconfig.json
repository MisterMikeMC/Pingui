{
  "compilerOptions": {
    "target": "ES2020",
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": ["dom", "ESNext"],
    "allowJs": true,
    "outDir": "./compiled",
    "rootDir": "./src",
    "removeComments": false,
    "strict": false,
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
